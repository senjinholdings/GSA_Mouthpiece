---
interface Props {
  title?: string;
  description?: string;
  lang?: string;
  bodyClass?: string;
}

const {
  title = '',
  description = '',
  lang = 'ja',
  bodyClass = ''
} = Astro.props as Props;
---
<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    {title && <title>{title}</title>}
    {description && <meta name="description" content={description} />}
    <slot name="head" />
  </head>
  <body class={bodyClass}>
    <slot />
  </body>
</html>
