---
interface Props {
  title?: string;
  description?: string;
  lang?: string;
  bodyClass?: string;
}

const {
  title = '',
  description = '',
  lang = 'ja',
  bodyClass = ''
} = Astro.props as Props;

const basePath = import.meta.env.BASE_URL ?? '/';
const normalizedBasePath = basePath.endsWith('/') ? basePath : `${basePath}/`;
const asset = (path: string) => {
  if (!path) return normalizedBasePath;
  return `${normalizedBasePath}${path.replace(/^\/+/, '')}`;
};
---
<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    {title && <title>{title}</title>}
    {description && <meta name="description" content={description} />}
    <script define:vars={{ normalizedBasePath }}>
      window.__BASE_PATH__ = normalizedBasePath;
    </script>
    <script src="/mouthpiece001/common_data/js/gtm-loader.js" defer></script>
    <slot name="head" />
  </head>
  <body class={bodyClass} data-base-path={normalizedBasePath}>
    <slot />
  </body>
</html>
